<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="tn.esprit.controllers.RessourceVisualizationController" 
            stylesheets="@../Css/RessourceVisualization.css"
            prefWidth="1200" prefHeight="800">
    <top>
        <VBox spacing="10" styleClass="header-container">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Button fx:id="btnRetour" text="← Retour" styleClass="btn-retour" onAction="#handleRetour" />
                <Label text="Visualisation des Ressources" styleClass="page-title">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-container">
                <ComboBox fx:id="cmbFilterCategorie" prefWidth="200" promptText="Catégorie" />
                <CheckBox fx:id="chkFilterDisponible" text="Disponible uniquement" />
                <TextField fx:id="txtFilterSearch" promptText="Rechercher..." prefWidth="250" />
                <Button fx:id="btnApplyFilter" text="Appliquer" onAction="#handleApplyFilter" styleClass="btn-primary" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" styleClass="main-container" VBox.vgrow="ALWAYS">
            <VBox spacing="20">
                <padding>
                    <Insets top="10" right="20" bottom="20" left="20" />
                </padding>

                <!-- Statistics Cards -->
                <HBox spacing="20" styleClass="stats-container">
                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                        <Label text="Total des Ressources" styleClass="stat-label" />
                        <Label fx:id="lblTotalRessources" text="0" styleClass="stat-value" />
                    </VBox>

                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                        <Label text="Ressources Disponibles" styleClass="stat-label" />
                        <Label fx:id="lblRessourcesDisponibles" text="0" styleClass="stat-value" />
                    </VBox>

                    <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                        <Label text="Tarif Moyen" styleClass="stat-label" />
                        <Label fx:id="lblTarifMoyen" text="0.00 €/h" styleClass="stat-value" />
                    </VBox>
                </HBox>

                <!-- Charts Section -->
                <GridPane hgap="20" vgap="20" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="300" prefHeight="300" />
                    </rowConstraints>

                    <!-- Pie Chart -->
                    <VBox styleClass="chart-container" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Répartition par Catégorie" styleClass="section-title" />
                        <PieChart fx:id="pieChartCategories" legendVisible="true" labelsVisible="true" 
                                 prefHeight="250" maxHeight="250" />
                    </VBox>

                    <!-- Line Chart -->
                    <VBox styleClass="chart-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Évolution des Ressources" styleClass="section-title" />
                        <LineChart fx:id="lineChartEvolution" prefHeight="250" maxHeight="250">
                            <xAxis>
                                <CategoryAxis label="Temps" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Nombre de ressources" />
                            </yAxis>
                        </LineChart>
                    </VBox>
                </GridPane>

                <!-- Resource Cards Section -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label text="Liste des Ressources" styleClass="section-title" />
                    <FlowPane fx:id="resourceCardsContainer" hgap="20" vgap="20" />
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>