<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>


<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.ReservationController">
    <stylesheets>
        <URL value="@../Css/type.css" />
        <URL value="@../Css/reservation.css" />
    </stylesheets>

    <!-- TOP HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: FFFFFF; -fx-padding: 10 20;">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/drapeau-du-gouvernement (2).png" />
                        </image>
                    </ImageView>
                    <Label alignment="CENTER" text="MTE" textFill="#db4495">
                        <font>
                            <Font name="Abril Fatface" size="24.0" />
                        </font>
                    </Label>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <TextField prefHeight="36.0" prefWidth="280.0" promptText="Chercher..." style="-fx-background-radius: 20;">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </TextField>

                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/output-onlinepngtools (3).png" />
                    </image>
                </ImageView>

                <Region HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="10">
                    <Label text="Oussema Neffati" textFill="#817e7e">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/output-onlinepngtools (4).png" />
                        </image>
                    </ImageView>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- LEFT SIDEBAR -->
    <left>
        <AnchorPane prefHeight="720.0" prefWidth="280.0" style="-fx-background-color: #4169E1;" BorderPane.alignment="CENTER">
            <children>
                <VBox layoutX="30.0" layoutY="40.0" prefHeight="640.0" prefWidth="220.0" spacing="20.0">
                    <children>
                        <Label text="Menu Principal" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <VBox spacing="10.0">
                            <children>
                                <Button alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: #315bb5; -fx-background-radius: 8; -fx-text-fill: white;" text="   Tableau de bord">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>

                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-opacity: 0.8;" text="   Demandes">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/output-onlinepngtools (5).png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-opacity: 0.8;" text="   Réservations">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/tableau-de-reservation (3).png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-opacity: 0.8;" text="   Calendrier">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/etoile-du-calendrier.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-opacity: 0.8;" text="   Projets">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/plan.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button alignment="CENTER_LEFT" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-opacity: 0.8;" text="   Paramètres">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/parametres.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="profileButton" alignment="CENTER_LEFT"  prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: transparent; -fx-text-fill: #ffffff; -fx-opacity: 0.8;" text="   Mon Profil">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/user.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </VBox>
                        <Button fx:id="logoutButton" layoutY="540.0" mnemonicParsing="false"  prefHeight="50.0" prefWidth="220.0" style="-fx-background-color: #DB4495; -fx-background-radius: 8; -fx-text-fill: white;" text="Déconnexion">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
                <Label layoutX="30.0" layoutY="670.0" text="Version 1.0.1" textFill="#ffffff">
                    <font>
                        <Font size="13.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="20" style="-fx-background-color: FFFFFF; -fx-padding: 25;">
            <children>
                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Gestion des Réservations" />

                <!-- FORM SECTION -->
                <GridPane hgap="20" style="-fx-background-color: #F8F9FA; -fx-background-radius: 10; -fx-padding: 25;" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    </columnConstraints>

                    <!-- First Row -->
                    <Label text="Date de réservation:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <DatePicker fx:id="dateReservationPicker" maxWidth="Infinity" promptText="Sélectionner une date" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="CIN:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                    <TextField fx:id="cinField" maxWidth="Infinity" promptText="CIN de l'utilisateur" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <!-- Second Row -->
                    <Label text="Heure de début:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <ComboBox fx:id="heureDebutComboBox" maxWidth="Infinity" promptText="Sélectionner une heure" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Heure de fin:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                    <ComboBox fx:id="heureFinComboBox" maxWidth="Infinity" promptText="Sélectionner une heure" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <!-- Third Row -->
                    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="statusComboBox" maxWidth="Infinity" promptText="Choisir un statut" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label text="Nombre de participants:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    <TextField fx:id="nombreParticipantsField" maxWidth="Infinity" promptText="Nombre de participants" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                    <!-- Fourth Row -->
                    <Label text="Motif:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="motifField" maxWidth="Infinity" promptText="Motif de la réservation" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />

                    <!-- Add Button with Loading Indicator -->
                    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15 0 0 0;" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="4">
                        <StackPane>
                            <Button fx:id="addButton" onAction="#saveReservation" prefHeight="35.0" prefWidth="140.0" style="-fx-background-color: #4169E1; -fx-background-radius: 5;" text="Ajouter" textFill="WHITE">
                                <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                        <image>

                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <ProgressIndicator fx:id="progressIndicator" maxHeight="20" maxWidth="20" style="-fx-progress-color: white;" visible="false" />
                        </StackPane>
                        <Label fx:id="emailStatusLabel" style="-fx-text-fill: #28a745; -fx-font-size: 12px;" text="✓ Email de confirmation envoyé" visible="false" />
                    </HBox>

                    <!-- Form Validation Messages -->
                    <VBox fx:id="validationMessages" style="-fx-padding: 10 0 0 0;" visible="false" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="5">
                        <Label style="-fx-text-fill: #dc3545; -fx-font-size: 12px;" />
                    </VBox>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <!-- CARDS SECTION -->
                <VBox spacing="10" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Liste des réservations" />
                    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                        <FlowPane fx:id="reservationCardsContainer" hgap="20" style="-fx-padding: 20;" vgap="20">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </FlowPane>
                    </ScrollPane>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
